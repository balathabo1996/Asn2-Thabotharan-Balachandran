<h2>{{title}}</h2>

<form action="/viewData/price" method="GET" style="margin-bottom:20px;">
  <label>Minimum Price:</label>
  <input
    type="text"
    name="min"
    placeholder="Enter minimum price"
    value="{{min}}"
  />

  <label>Maximum Price:</label>
  <input
    type="text"
    name="max"
    placeholder="Enter maximum price"
    value="{{max}}"
  />

  <button type="submit">Search</button>
</form>

{{#if errors}}
  <ul style="color:red; list-style: none;">
    {{#each errors}}
      <li>{{this.msg}}</li>
    {{/each}}
  </ul>
{{/if}}

{{#if data.length}}
  <h3>Results between ${{min}} and ${{max}}</h3>
  <table border="1" cellpadding="5" cellspacing="0">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Country</th>
        <th>Property Type</th>
        <th>Price</th>
        <th>Service Fee</th>
        <th>Thumbnail</th>
      </tr>
    </thead>
    <tbody>
      {{#each data}}
        <tr>
          <td>{{this.id}}</td>
          <td>{{this.NAME}}</td>
          <td>{{this.country}}</td>
          <td>{{this.property_type}}</td>
          <td>{{this.price}}</td>
          <td>{{this.[service fee]}}</td>
          <td><img src="{{this.thumbnail}}" width="100" /></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else if min}}
  <p>{{message}}</p>
{{/if}}